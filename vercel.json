{
    "version": 2,
    "builds": [
      {
        "src": "backend/api/sendEmail.js",
        "use": "@vercel/node"
      }
    ],
    "env": {
      "RECAPTCHA_SECRET_KEY": "@recaptcha_secret_key",
      "EMAIL_USER": "@email_user",
      "EMAIL_PASSWORD": "@email_password",
      "EMAIL_RECIPIENT": "@email_recipient",
      "FRONTEND_URL": "https://nirzara-portfolio.vercel.app/",
      "SMTP_HOST": "smtp.gmail.com",
      "SMTP_PORT": "587",
      "SMTP_USER": "@smtp_user",
      "SMTP_PASS": "@smtp_pass",
      "PORT": "5000",
      "NODE_ENV": "production"
    }
  }
  